<h1>Edit Item</h1>
 
 <div class="row">
   <div class="col-md-8">
     <%= form_for @item do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter item title" %>
       </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>
